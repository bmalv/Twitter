<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivATDProfileImage"
        android:layout_width="115dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="275dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvATDScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvATDBody"
        android:layout_width="363dp"
        android:layout_height="84dp"
        android:layout_below="@+id/ivATDProfileImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:textAlignment="textStart"
        tools:text="this is the tweet!" />

    <ImageView
        android:id="@+id/ivATDEmbeddedImage"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvATDBody"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>